{
  "$schema": "https://json-schema.org/draft-04/schema",
  "id": "mcc/materials.schema.json",
  "title": "Materials",
  "description": "This is a material",
  "type": "object",
  "definitions": {
    "MaterialTexture": {
      "oneOf": [
        {
          "type": "string"
        }
      ]
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "The name for this material."
    },
    "description": {
      "type": "string",
      "description": "The description for this material."
    },
    "albedo": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The albedo texture for this material."
    },
    "ao": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The ambient occlusion texture for this material."
    },
    "height": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The height texture for this material."
    },
    "metallic": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The metallic texture for this material."
    },
    "normal": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The normal texture for this material."
    },
    "roughness": {
      "$schema": "#/definitions/MaterialTexture",
      "description": "The roughness texture for this material."
    }
  },
  "additionalProperties": false
}