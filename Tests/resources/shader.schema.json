{
  "$schema": "https://json-schema.org/draft-04/schema",
  "id": "mcc/shader.schema.json",
  "title": "Shader",
  "description": "This is a shader",
  "type": "object",
  "definitions": {
    "ShaderReference": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the shader"
    },
    "description": {
      "type": "string",
      "description": "The description of the shader"
    },
    "vertex": {
      "$schema": "#/definitions/ShaderReference"
    },
    "fragment": {
      "$schema": "#/definitions/ShaderReference"
    },
    "geometry": {
      "$schema": "#/definitions/ShaderReference"
    },
    "tessControl": {
      "$schema": "#/definitions/ShaderReference"
    },
    "tessEval": {
      "$schema": "#/definitions/ShaderReference"
    }
  },
  "required": [
    "vertex",
    "fragment"
  ],
  "additionalProperties": false
}